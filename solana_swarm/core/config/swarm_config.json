{
  "default_config": {
    "name": "solana-swarm-default",
    "version": "0.1.0",
    "environment": "development",
    "llm": {
      "provider": "openrouter",
      "model": "anthropic/claude-3.5-sonnet",
      "temperature": 0.7,
      "max_tokens": 2000,
      "api_url": "https://openrouter.ai/api/v1"
    },
    "solana": {
      "network": "devnet",
      "rpc_url": "https://api.devnet.solana.com",
      "commitment": "confirmed"
    },
    "consensus": {
      "min_confidence": 0.7,
      "min_votes": 2,
      "timeout": 30.0,
      "voting_strategy": "weighted",
      "tie_breaker": "highest_confidence"
    },
    "logging": {
      "level": "INFO",
      "file": "logs/solana_swarm.log",
      "max_size": "10MB",
      "backup_count": 5,
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "market_data": {
      "primary_source": "coingecko",
      "fallback_sources": ["jupiter", "raydium"],
      "cache_ttl": 300,
      "rate_limit": 60,
      "timeout": 10
    },
    "security": {
      "max_position_size": 1000,
      "daily_loss_limit": 0.05,
      "max_slippage": 0.01,
      "require_confirmation": true,
      "dry_run_default": true
    }
  },
  "agent_templates": {
    "basic_market_analyzer": {
      "name": "market-analyzer",
      "role": "market_analyzer",
      "capabilities": ["price_monitoring", "trend_analysis"],
      "custom_settings": {
        "update_interval": 60,
        "confidence_threshold": 0.7,
        "monitored_tokens": ["SOL", "USDC", "RAY", "ORCA"]
      }
    },
    "basic_risk_manager": {
      "name": "risk-manager", 
      "role": "risk_manager",
      "capabilities": ["risk_assessment", "position_sizing"],
      "custom_settings": {
        "max_position_size": 1000,
        "risk_tolerance": "medium",
        "stop_loss": 0.05
      }
    },
    "basic_decision_maker": {
      "name": "decision-maker",
      "role": "decision_maker", 
      "capabilities": ["decision_making", "consensus_building"],
      "custom_settings": {
        "min_confidence": 0.8,
        "consensus_threshold": 0.6
      }
    }
  },
  "strategy_templates": {
    "basic_arbitrage": {
      "name": "basic-arbitrage",
      "description": "Simple arbitrage strategy across Solana DEXs",
      "agents": ["market-analyzer", "risk-manager", "decision-maker"],
      "parameters": {
        "min_profit_threshold": 0.01,
        "max_position_size": 500,
        "target_dexs": ["raydium", "orca", "jupiter"]
      },
      "risk_management": {
        "max_slippage": 0.005,
        "position_limit": 0.1,
        "stop_loss": 0.02
      }
    },
    "yield_farming": {
      "name": "yield-farming",
      "description": "Automated yield farming strategy",
      "agents": ["market-analyzer", "yield-farmer", "portfolio-manager"],
      "parameters": {
        "min_apr": 0.1,
        "rebalance_threshold": 0.05,
        "target_pools": ["SOL-USDC", "RAY-SOL", "ORCA-USDC"]
      },
      "risk_management": {
        "max_impermanent_loss": 0.03,
        "diversification_limit": 0.3
      }
    }
  },
  "network_configs": {
    "devnet": {
      "rpc_url": "https://api.devnet.solana.com",
      "websocket_url": "wss://api.devnet.solana.com",
      "explorer_url": "https://explorer.solana.com/?cluster=devnet",
      "faucet_url": "https://faucet.solana.com"
    },
    "testnet": {
      "rpc_url": "https://api.testnet.solana.com",
      "websocket_url": "wss://api.testnet.solana.com", 
      "explorer_url": "https://explorer.solana.com/?cluster=testnet"
    },
    "mainnet": {
      "rpc_url": "https://api.mainnet-beta.solana.com",
      "websocket_url": "wss://api.mainnet-beta.solana.com",
      "explorer_url": "https://explorer.solana.com"
    }
  }
}
